.root {
	position: relative;

	width: 100%;
	height: 0.5em;
	background-color: white;
	cursor: pointer;
	transition: transform 0.2s;

	&:hover {
		transform: scaleY(1.4);
	}
}

.time,
.buffer {
	position: absolute;
	top: 0;
	left: 0;

	width: 10%;
	height: 100%;
	background-color: var(--orange);
}

.time {
	z-index: 2;
}

.buffer {
	z-index: 1;

	width: 20%;
	opacity: 0.6;
}
